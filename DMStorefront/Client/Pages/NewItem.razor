@page "/item/create"
@using DMStorefront.Shared.Models;
@using DMStorefront.Client.Shared.DMStore
@attribute [Authorize]


@inject HttpClient http
@inject NavigationManager uriHelper
<h3>Create a New Item</h3>
<ItemForm ButtonText="Create Item" item="@item"
            OnValidSubmit="@CreateAnItem" />
@code {

    Item item = new Item();
    async Task CreateAnItem()
    {
        await http.PostAsJsonAsync("api/item", item);
        uriHelper.NavigateTo("store");
    }
}

